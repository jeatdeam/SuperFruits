{
  "compilerOptions": {
    "target": "ES2020",              // o ES2022 / ESNext
    "module": "ESNext",              // muy importante
    "moduleResolution": "NodeNext",  // resoluci√≥n correcta para imports
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
