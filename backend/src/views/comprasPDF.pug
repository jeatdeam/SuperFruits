doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Detalles de compras
        style.
            * {
                box-sizing: border-box;
            }
            body{
                /*padding: 50px 0;*/
            }
            p {
                margin: 0;
                font-weight: bold;
                font-size: 12.5px;
                white-space: nowrap;
                /*line-height: 1;*/
                padding: 0;
            }
            small {
                padding: 0 5px;
                font-size: 15px;
                font-weight: normal;
                line-height: 1;
                word-break: break-all;
                overflow-wrap: break-word;
                margin: 0;
            }
            h2 {
                margin: 0;
                font-size: 17.5px;
            }
            h4, h5 {
                line-height: 1.3;
                margin: 0;
            }
            main {
                display: flex;
                flex-direction: column;
                gap: 15px;
            }
            th {
                font-size: 12.5px;
                border: 1px solid gray;
                height: 25px;
            }
            td {
                font-size: 15px;
                border: 1px solid gray;
                text-align: center;
                height: 25px;
            }
            .containerTable {
                width: 100%;
                /*border: 1px solid gray;*/
                border-bottom: 0;
            }
            ul {
                list-style: none;
                display: flex;
                justify-content: space-between;
                padding: 5px;
                gap: 5px;
                background: gray;
                margin: 0;
            }
            li {
                font-size: 12.5px;
                font-weight: bold;
            }
            li:nth-of-type(1), li:nth-of-type(3), li:nth-of-type(4), li:nth-of-type(5), li:nth-of-type(6), li:nth-of-type(7) {
                width: 100px;
                text-align: end;
            }
            li:nth-of-type(1) {
                text-align: start;
            }
            li:nth-of-type(2) {
                width: 300px;
            }
            .containerIgv {
                padding: 5px;
                border-top: 1px solid gray;
                display: flex;
                flex-direction: column;
                gap: 2.5px;
            }
            .igvSection {
                display: flex;
            }
            .igvSection:nth-of-type(1) > div:nth-of-type(1) {
                width: 475px;
                text-align: end;
                margin-right: 10px;
            }
            .igvSection:nth-of-type(1) > div:nth-of-type(2) {
                width: 100px;
                text-align: center;
            }
            .igvSection:nth-of-type(1) > div:nth-of-type(3) {
                width: 155px;
                text-align: end;
            }
            .igvSection:nth-of-type(1) > div:nth-of-type(4) {
                flex: 1;
                text-align: end;
                font-size: 15px;
            }
            .igvSection:not(:nth-of-type(1)) > div:nth-of-type(1) {
                width: 740px;
                text-align: end;
                font-size: 15px;
            }
            .igvSection:not(:nth-of-type(1)) > div:nth-of-type(2) {
                flex: 1;
                text-align: end;
                font-size: 15px;
            }
            .containerTotal {
                border-top: 1px solid gray;
                padding: 5px;
                display: flex;
                flex-direction: column;
                gap: 2.5px;
            }
            .subTotal-1, .subTotal-2 {
                display: flex;
            }
            .subTotal-1 > div:nth-of-type(2), .subTotal-2 > div:nth-of-type(2) {
                width: 85px;
                text-align: end;
                font-size: 15px;
            }
            .subTotal-1 > div:nth-of-type(1), .subTotal-2 > div:nth-of-type(1) {
                flex: 1;
                text-align: end;
                font-weight: bold;
                font-size: 12.5px;
            }
            .footInfo {
                justify-content: space-between;
                display: flex;
                flex-direction: column;
                gap: 25px;
            }
            .footInfo > div:nth-of-type(2) {
                display: flex;
                justify-content: space-between;
            }
            .footInfo > div:nth-of-type(2) > div {
                display: flex;
                flex-direction: column;
                gap: 5px;
            }
            .footInfo > div:nth-of-type(2) > div > span {
                display: block;
            }
            .footInfo > div:nth-of-type(2) > div > span:nth-of-type(1) {
                font-weight: bold;
                font-size: 15px;
            }
            .fila {
                display: block;
                page-break-inside: avoid;
            }
            tr{
                page-break-inside: avoid;
            }

            header{

            }
            .clientData,.compraData{

            }

            @media print {
            body {
                    /*margin: 20mm 15mm;*/
            }

            table {
                    page-break-inside: auto;
                    width: 100%;
                    border-collapse: collapse;
            }

            thead {
                display: table-header-group;
                margin: 0;
            }

            tr {
                page-break-inside: avoid;
            }

            td, th {

            }
            @page {
                margin: 2cm 1.5cm;
            }
            }
