generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model clientes {
  name         String
  email        String?
  lastname     String
  phoneone     String
  phonetwo     String?   @default("000000000")
  departamento String
  distrito     String
  provincia    String
  direccion    String
  courier      String
  textarea     String    @default("recojo en tienda")
  products     String[]
  fecha        DateTime? @db.Timestamptz(6)
  allcheck     Boolean
  id_client    String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  amount       String?   @default("0")
}

model products {
  price_product           Decimal
  stock_product           Int           @default(0)
  status_product          ProductStatus
  name_product            String
  title_product           String
  tratamiento_product     String[]
  descuento_product       Int
  img_product             String[]
  detalles_product        String[]
  caracteristicas_product String[]
  calificacion_client     Int
  type_fruit              String
  id_product              String        @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
}

enum ProductStatus {
  DISPONIBLE
  NO_DISPONIBLE
  DESCONTINUADO
}
